@import 'jeet'

// handy for media query calculation
$col = 50px
$gutter = 30px

cols($cols)
  $cols * ($col + $gutter)

gutter($cols)
  $gutter * 100 / (cols($cols) - $gutter)

body
  background #eee
  margin 20px 0

ul
  background white
  list-style none
  margin 0
  padding 0

.container
  box-sizing border-box
  cf()
  center()
  padding-left ($gutter / 2)
  padding-right ($gutter / 2)
  margin-bottom 20px
  width cols(4)

  @media screen and (min-width: cols(8))
    width cols(8)

  @media screen and (min-width: cols(12))
    width cols(12)

  @media screen and (min-width: cols(16))
    width cols(16)

li
  background #ddd
  height 40px
  margin-top 5px
  margin-bottom 5px

  @media screen and (min-width: cols(8))
    col(1/2, cycle: 2, gutter: gutter(8))

  @media screen and (min-width: cols(12))
    col(1/3, cycle: 3, uncycle: 2, gutter: gutter(12))

  @media screen and (min-width: cols(16))
    col(1/4, cycle: 4, uncycle: 3, gutter: gutter(16))

.container input
  box-sizing border-box
  display block
  padding 10px
  width 100%


li
  &:first-child
    div
      background #0ad
      col(1/4, gutter: 4)
      height 40px
